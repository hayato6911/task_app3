<h2>ルーム予約画面</h2>

<%= form_for @resevation do |f| %>
  <table>
    <tr>
      <div class="">
      <th><%= f.label :start_day ,'開始日' %></th>
      <td><%= f.date_field :start_day %></td>
      </div>
      <div class="">
      <th><%= f.label :end_day ,"終了日" %></th>
      <td><%= f.date_field :end_day %></td>
      </div>
      <div class="">
      <th><%= f.label :number_of_people ,'人数' %></th>
      <td><%= f.number_field :number_of_people %></td>
      </div>
    </tr>
  </table>
  
  <div>
    <%= f.submit '予約',class: "room_room_touroku" %>
  </div>
<% end %>